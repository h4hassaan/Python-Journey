while True:
    num=int(input("Enter a Prime number: "))
    if num > 1:
        is_prime=True
        for i in range(2 , int(num**0.5)+1):
            if num % i == 0:
                print('Not a prime number')
                is_prime=False
                break 

        if is_prime== True:
            print(f'{num} is a Prime number')
            break 
        else:
            print("Please try again ")
    else:
        print('Please try again')
        
